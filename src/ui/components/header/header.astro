---
import Box from '../box';
import Logo from './logo.astro';
import Nav from './nav';
---
<Box
  as="header"
  display="flex"
  justifyContent="justify-between"
  p="p-4"
  alignItems="items-center"
  border="border-b"
  borderColor="border-b-blue-900"
  position="absolute"
  top="top-0"
  w="w-full"
  maxW="max-w-7xl"
  translate="-translate-x-1/2"
  dropShadow="drop-shadow-sm"
>
  <Logo />
  <Nav />
</Box>
